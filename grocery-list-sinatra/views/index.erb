<h1>Groceries</h1>
<ul>
  <% @groceries.each do |food_item| %>
    <li>
      <%= food_item %>
    </li>
  <% end %>
  <form action='/grocery-list' method='post'>
    <div class='field'>
      <label for='name'>Name:
      </label>
      <input id='name' name='name' type='text'/>
    </div>
    <input type='submit' value='Add' id='submit-button'/>
  </form>
